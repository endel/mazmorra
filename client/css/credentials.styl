section#credentials
  background url(../../public/images/background.jpg) no-repeat center
  background-size cover

  p
    margin 12px

  input
    font 24px primary
    width 50vw
    padding 14px
    margin 4px 0
    border 4px solid #000
    transition border 0.4s

    &:focus:invalid
      border 4px solid #d00000

    &:focus, &:active
      padding 14px !important
      border 4px solid #fcf458
      outline none
      outline-width 0

  input[type="submit"]
    cursor pointer
    font 24px primary
    display inline-block
    background #5c3000
    color #fff
    transition background 0.2s
    &:hover
      background #482c04

  .new-hero
    font-size 0.8em

  .ad-left
    position absolute
    background rgba(0, 0, 0, 0.25)
    display inline-block
    width 300px
    height 250px
    left 4vh
    top 0
    bottom 0
    margin auto
    @media only screen and (max-width: 768px)
      display none

  .updates
    h2
      text-shadow -1px 0 #740000, 0 -1px #740000, 1px 0 #740000, 0px 2px #740000
      color #fc6018
    text-align center
    position absolute
    bottom 10vh
    left 0
    right 0
    display inline-block
    font-size 0.7em

  img
    margin-top 10vh
    margin-bottom 32px
    width 40vw

  input
    width 300px
    text-align: center
    margin-bottom 2vh
