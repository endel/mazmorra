section#credentials
  background url(../../public/images/background.jpg) no-repeat center
  background-size cover

  p
    margin 12px

  input
    font 24px primary
    width 50vw
    padding 14px
    margin 4px 0
    border 4px solid #000
    transition border 0.4s

    &:focus:invalid
      border 4px solid #d00000

    &:focus, &:active
      padding 14px !important
      border 4px solid #fcf458
      outline none
      outline-width 0

  input[type="submit"]
    cursor pointer
    font 24px primary
    display inline-block
    background #5c3000
    color #fff
    transition background 0.2s
    &:hover
      background #482c04

  .new-hero
    font-size 0.8em

  .ad-left
    position absolute
    display inline-block
    width 300px
    height 250px
    left 4vh
    top 0
    bottom 0
    margin auto

  .updates
    ul
      list-style circle
      li
        margin-left 42px
    strong
      text-shadow -1px 0 #740000, 0 -1px #740000, 1px 0 #740000, 0px 2px #740000
      color #fc6018
    border 1px solid #fcf458;
    text-align left
    position absolute
    display inline-block
    width 50vw
    height 120px
    font-size 0.7em
    right 0
    left 0
    bottom 5vh
    margin auto
    overflow scroll

  img
    margin-top 28vh
    margin-bottom 32px
    width 40vw

  input
    width 300px
    text-align: center
    margin-bottom 2vh
